category:            Graphics
build-type:          Simple
cabal-version:       >=1.8

Test-Suite interactive
  type: exitcode-stdio-1.0
  main-is: Interactive.hs
  build-depends: base, haskell-sdl2
  hs-source-dirs: Tests

Test-Suite automatic
  type: exitcode-stdio-1.0
  main-is: Automatic.hs
  build-depends: base, haskell-sdl2
  hs-source-dirs: Tests

library
  Build-Tools: c2hs
  other-modules: 
    Graphics.UI.SDL2.Common
  exposed-modules:
    Graphics.UI.SDL2.Internal.Error,
    Graphics.UI.SDL2.Internal.Window,
    Graphics.UI.SDL2.Internal.Texture,
    Graphics.UI.SDL2.Internal.Renderer,
    Graphics.UI.SDL2.Internal.RWops,
    Graphics.UI.SDL2.Internal.Surface,
    Graphics.UI.SDL2.Pixels,
    Graphics.UI.SDL2.RWops,
    Graphics.UI.SDL2.Quit,
    Graphics.UI.SDL2.Rect,
    Graphics.UI.SDL2.Surface,
    Graphics.UI.SDL2.Video,
    Graphics.UI.SDL2.Render,
    Graphics.UI.SDL2.Scancode,
    Graphics.UI.SDL2.Keycode,
    Graphics.UI.SDL2.Touch,
    Graphics.UI.SDL2.Gesture,
    Graphics.UI.SDL2.Keyboard,
    Graphics.UI.SDL2.Joystick
    Graphics.UI.SDL2.Events,
    Graphics.UI.SDL2
  extra-libraries: SDL2
  ghc-options: -Wall
  Extensions:
    CPP,
    BangPatterns,
    ForeignFunctionInterface
  build-depends:       base == 4.6.*
